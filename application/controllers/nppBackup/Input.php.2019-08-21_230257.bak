<?php

class extends CI_Controller
{

	public function __construct()
	
	{
		parent::__construct();
		
		
	}
	public funtion index ($page,$mode)
	{
		$modes = array("edit","update","unlink");
		(!in_array($mode,$modes,TRUE)) ?  exit(redirect("/")) : null;
		switch($mode)
		{
			$this->$mode($page);
		}
		
	}
	public function edit()
	{
		if($page == "EDIT")
		{
			$this->edit($PAGE);
		}
		
	}

}

?>